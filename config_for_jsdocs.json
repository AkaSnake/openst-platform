{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["tools/","services/"],
    "exclude": [],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": [],
  "recurseDepth": 5,
  "templates": {
    "systemName"            : "Simple Token Foundation",
    "footer"                : "@simpletokenplatform",
    "copyright"             :  "@simpletokenplatform",
    "includeDate"           : true,
    "theme"                 : "Lumen",
    "navType"               : "vertical",
    "linenums"              : true,
    "cleverLinks"           : true,
    "monospaceLinks"        : true,
    "default": {
      "outputSourceFiles": true
    }
  }
}
